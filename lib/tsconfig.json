{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "lib": ["es6", "dom"],
        "noImplicitAny": false,
        "importHelpers": true,
        "removeComments": true,
        "noLib": false,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "outDir": "../dist",
        "sourceMap": false,
        "jsx": "react",
        "types": [
            "byots"
        ]
    },
    "dts": {
        "name": "atom-typescript"
    },
    "atom": {
        "formatOnSave": false
    }
}
