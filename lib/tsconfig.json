{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": false,
        "lib": ["es6", "dom"],
        "noImplicitAny": false,
        "importHelpers": true,
        "removeComments": true,
        "noLib": false,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "outDir": "../dist",
        "sourceMap": false,
        "jsx": "react",
        "reactNamespace": "dom",
        "types": ["react"]
    },
    "atom": {
        "formatOnSave": false
    }
}
